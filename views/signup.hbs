<div class="container">
  <div class="row">
      <h4>{{message}}</h4>
      <h4><a href='/login'> < Back </a></h4>
  </div>
  <div class="row text-center">
    <div class="col-sm-10 col-sm-offset-1">
      <div class="row bottom-buffer">
        <h3>Please fill out your info</h3>
      </div>
      <div class="row">
        <div class="col-sm-6 col-sm-offset-3 darker text-left">
          <form class="form" action="/signup" method="POST">
            <div class="form-group top-buffer">
              <label for="username">Username</label>
              <input name="username" class="form-control" placeholder="username">
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input name="password" class="form-control" placeholder="password">
            </div>
            <div class="form-group">
              <label for="firstName">First Name</label>
              <input name="firstName" class="form-control" placeholder="First Name">
            </div>
            <div class="form-group">
              <label for="lastName">Last Name</label>
              <input name="lastName" class="form-control" placeholder="Last Name">
            </div>
            <div class="form-group">
              <label for="email">email@address.com</label>
              <input name="email" class="form-control" placeholder="email">
            </div>
            <div class="form-group">
              <label for="dogName">Your Dog's name</label>
              <textarea name="dogName" class="form-control" name='dogName' placeholder="Dog's name"></textarea>
            </div>
            <div class="btn-group bottom-buffer">
              <button class="btn btn-lg btn-primary" type='submit' value='submit'/>Done!</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
